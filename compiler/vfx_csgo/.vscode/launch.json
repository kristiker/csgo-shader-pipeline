    "version": "0.2.0",
    "configurations": [
        {
            "name": "Vfx Csgo",
            "type": "coreclr",
            "request": "launch",
            "preLaunchTask": "build",
            "program": "${workspaceFolder}/bin/Debug/net7.0/win-x64/vfx_csgo.exe",
            "args": [
                "${workspaceFolder}/../../shaders/csgo_black_unlit.vfx",
            ],
            "cwd": "${workspaceFolder}",
            "console": "internalConsole",
            "stopAtEntry": false
        },
        {
            "name": "Fast Vfx Csgo",
            "type": "coreclr",
            "request": "launch",
            "program": "${workspaceFolder}/bin/Debug/net7.0/win-x64/vfx_csgo.exe",
            "args": [
                "${workspaceFolder}/../../shaders/csgo_black_unlit.vfx",
                //"-vs",
                //"-shaderinfo",
                "-50",
                "-vulkan",
                //"-stats",
                //"-hlsl_preprocessed_out",
                //"out.hlsl",
            ],
            "cwd": "${workspaceFolder}",
            "console": "internalConsole",
            "stopAtEntry": false
        },
        {
            "name": ".NET Core Attach",
            "type": "coreclr",
            "request": "attach"
        }
    ]
}